#!/usr/bin/env bash
set -u # error out if variable is not set
set -e # exit if returns non true

function run_session() {
    if [[ ! -f ${HOME}/dotfiles/tmuxs/$1.sh ]]; then
        echo 'There is no tmux session with that name.'
        return
    fi

    if tmux info &> /dev/null; then 
      echo running
    else
      echo not running
    fi

    # Check if the tmux session exists. 
    # If it does exist then switch to it.
    # We will need to check if we are currently in a tmux session or not.
    # If it doesn't exist then run the command to make it

    if ! tmux has-session -t "$1" &> /dev/null; then 
        echo "Session not found. Create Session '$1'."
        sh -c "${HOME}/dotfiles/tmuxs/$1.sh"
    else
        echo "Session found. Connecting to '$1'."
        sleep .5
        tmux switch -t "$1" || tmux attach -t "$1"
    fi

    # Run the command
    # sh -c ${HOME}/dotfiles/tmuxs/$1.sh

}

run_session "$1"
