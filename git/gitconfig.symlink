[color]
    ui = true
[push]
    default = simple
[merge]
    ff = false
[pull]
    ff = only
[include]
    path = ~/dotfiles/git/git-aliases
    path = ~/.config/git/config.local
[core]
    editor = $(which nvim) -u ~/.config/nvim/init.vim
	excludesfile = ~/.gitignore
	; pager =  git diff --name-only --relative --diff-filter=d | xargs bat --diff
[help]
    autocorrect = -1
[init]
	defaultBranch = main
