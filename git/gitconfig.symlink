[color]
    ui = true
[push]
    default = simple
[merge]
    ff = false
[pull]
    ff= true
[include]
    path = ~/dotfiles/git/git-aliases
    path = ~/.gitconfig.local
[core]
    editor = $(which vim)
    excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[help]
    autocorrect = -1
